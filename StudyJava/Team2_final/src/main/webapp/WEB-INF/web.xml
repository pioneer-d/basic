    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
    <servlet>
		<servlet-name>AdminController</servlet-name>
		<servlet-class>
		admin.action.AdminController
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminController</servlet-name>

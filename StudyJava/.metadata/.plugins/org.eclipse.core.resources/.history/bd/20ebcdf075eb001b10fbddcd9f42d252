package day7.api;

public class String1 {
	
	public static void main(String[] args) {
		
		String str1 = "abcd";
		String str2 = "EFGH";
		String str3 = "ijkl";
		
		//문자열의 위치는 0부터이다!
		
		//concat - 문자열 연결
			System.out.println("문자열 연결"+str1.concat(str2));
		//substring - 문자열 자르기
			System.out.println("문자열 자르기"+str1.substring(2));
		//length - 문자열 길이
		
		//toUpperCase - 대문자화
		
		//to LowerCase - 소문자화
		
		//charAt - 특정 위치의 글자 찾기
		
		//indexOf - 특정 문자열의 위치 찾기
		
		//equal - 문자열 비교
		
		//trim - 문자열 공백제거
		
		//replace - 특정 문자 변경
		
		//replaceAll - 특정 문자열 변경
	}

}

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="812"
    tools:context=".navigation.more.page.FrequentQuestionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="87">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="11dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_left_button"
        android:background="@android:color/transparent"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:text="@string/txt_frequent_quest_title"
        android:textSize="17dp"
        android:textColor="#111111"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">

        <ImageButton
            android:layout_width="68dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_mini_selected_button"
            android:background="@android:color/transparent"
            android:id="@+id/allQuestion"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/allQuestion_text"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="@string/txt_frequent_all_selected"
            app:layout_constraintTop_toTopOf="@+id/allQuestion"
            app:layout_constraintBottom_toBottomOf="@+id/allQuestion"
            app:layout_constraintLeft_toLeftOf="@+id/allQuestion"
            app:layout_constraintRight_toRightOf="@+id/allQuestion"
            android:textSize="16dp" />


        <ImageButton
            android:layout_width="96dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_big_basic_button"
            android:background="@android:color/transparent"
            android:id="@+id/howToUseQuestion"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toRightOf="@+id/allQuestion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/howToUseQuestion_text"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="@string/txt_frequent_use_basic"
            app:layout_constraintTop_toTopOf="@+id/howToUseQuestion"
            app:layout_constraintBottom_toBottomOf="@+id/howToUseQuestion"
            app:layout_constraintLeft_toLeftOf="@+id/howToUseQuestion"
            app:layout_constraintRight_toRightOf="@+id/howToUseQuestion"
            android:textSize="16dp" />

        <ImageButton
            android:layout_width="68dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_mini_basic_button"
            android:background="@android:color/transparent"
            android:id="@+id/techQuestion"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toRightOf="@+id/howToUseQuestion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/techQuestion_text"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="@string/txt_frequent_tech_basic"
            app:layout_constraintTop_toTopOf="@+id/techQuestion"
            app:layout_constraintBottom_toBottomOf="@+id/techQuestion"
            app:layout_constraintLeft_toLeftOf="@+id/techQuestion"
            app:layout_constraintRight_toRightOf="@+id/techQuestion"
            android:textSize="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="625">



    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@color/white"
        android:id="@+id/question_list"
        app:layout_constraintTop_toTopOf="parent"
        android:divider="#00000000"
        android:scrollbars="none"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
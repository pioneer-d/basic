<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".navigation.scan.frg.ScanSuccessFragment"
    android:background="@color/white">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent" >
        
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_cancel_button"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="35dp"
            android:layout_marginRight="21dp"/>

        <ImageView
            android:id="@+id/parent_image"
            android:layout_width="335dp"
            android:layout_height="396dp"
            android:src="@drawable/ic_success_image"
            android:layout_marginTop="82dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    
        <ImageView
            android:layout_width="238dp"
            android:layout_height="94dp"
            android:layout_marginTop="116dp"
            android:src="@drawable/ic_success_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/data_frame"
            android:layout_width="335dp"
            android:layout_height="128dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parent_image"
            android:layout_marginTop="26dp"
            android:src="@drawable/ic_data_frame" />

        <androidx.cardview.widget.CardView
            android:id="@+id/product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@+id/data_frame"
            app:layout_constraintBottom_toBottomOf="@+id/data_frame"
            app:layout_constraintLeft_toLeftOf="@+id/data_frame"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/genreView"
            android:layout_width="184dp"
            android:layout_height="22dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="#79828A"
            app:layout_constraintTop_toTopOf="@+id/data_frame"
            android:layout_marginTop="27dp"
            app:layout_constraintLeft_toLeftOf="@+id/data_frame"
            android:layout_marginLeft="120dp" />

        <TextView
            android:id="@+id/productView"
            android:layout_width="195dp"
            android:layout_height="24dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#303538"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/data_frame"
            android:layout_marginTop="51dp"
            app:layout_constraintLeft_toLeftOf="@+id/data_frame"
            android:layout_marginLeft="120dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/brandView"
            android:layout_width="184dp"
            android:layout_height="22dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="#79828A"
            app:layout_constraintTop_toTopOf="@+id/data_frame"
            android:layout_marginTop="79dp"
            app:layout_constraintLeft_toLeftOf="@+id/data_frame"
            android:layout_marginLeft="120dp" />


        <ImageButton
            android:id="@+id/go_webBrowser"
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/data_frame"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_product_detail" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
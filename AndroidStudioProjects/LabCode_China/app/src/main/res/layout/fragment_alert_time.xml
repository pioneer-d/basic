<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".navigation.scan.page.AlertTimeFragment"
    android:background="#FF808080">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="812">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="180"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="632">


        <ImageView
            android:layout_width="312dp"
            android:layout_height="303dp"
            android:layout_marginTop="115dp"
            android:src="@drawable/ic_alert_time_white_box"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/txt_scan_alert_main"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#303538"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="226dp" />

            <TextView
                android:layout_width="264dp"
                android:layout_height="72dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="266dp"
                android:textColor="#79828A"
                android:textSize="16dp"
                android:gravity="center"
                android:text="@string/txt_scan_alert_sub" />


        <ImageView
            android:layout_width="312dp"
            android:layout_height="202dp"
            android:src="@drawable/ic_clock"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageButton
            android:id="@+id/backScanButton"
            android:layout_width="312dp"
            android:layout_height="56dp"
            android:layout_marginTop="362dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_alert_agree" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="@string/txt_agree"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="378dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</FrameLayout>
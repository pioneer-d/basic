<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".navigation.scan.frg.AlertTimeFragment"
    android:background="#FF808080">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent" >


        <ImageView
            android:layout_width="312dp"
            android:layout_height="303dp"
            android:layout_marginTop="295dp"
            android:src="@drawable/ic_alert_time_white_box"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
            android:layout_width="264dp"
            android:layout_height="112dp"
            android:src="@drawable/ic_alert_time_text"
            android:layout_marginTop="400dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <ImageView
            android:layout_width="312dp"
            android:layout_height="202dp"
            android:src="@drawable/ic_clock"
            android:layout_marginTop="196dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageButton
            android:id="@+id/backScanButton"
            android:layout_width="312dp"
            android:layout_height="56dp"
            android:layout_marginTop="542dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_alert_confirm" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation.scan.page.ScanSuccessActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="812dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="86dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="18dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_cancel_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="36dp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="399dp">

            <ImageView
                android:id="@+id/parent_image"
                android:layout_width="335dp"
                android:layout_height="396dp"
                android:src="@drawable/ic_success_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/scan_success"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginTop="34dp"
                android:text="@string/txt_scan_success_main"
                android:textColor="#111111"
                android:textSize="26dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="@string/txt_scan_success_sub"
                android:textColor="#9EA7AD"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scan_success" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="291dp">

            <ImageView
                android:id="@+id/data_frame"
                android:layout_width="335dp"
                android:layout_height="128dp"
                android:layout_marginTop="34dp"
                android:src="@drawable/ic_data_frame"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/product_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/data_frame"
                app:layout_constraintLeft_toLeftOf="@+id/data_frame"
                app:layout_constraintTop_toTopOf="@+id/data_frame">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/genreView"
                android:layout_width="184dp"
                android:layout_height="22dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="27dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#79828A"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="@+id/data_frame"
                app:layout_constraintTop_toTopOf="@+id/data_frame" />

            <TextView
                android:id="@+id/productView"
                android:layout_width="195dp"
                android:layout_height="24dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="51dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#303538"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@+id/data_frame"
                app:layout_constraintTop_toTopOf="@+id/data_frame" />

            <TextView
                android:id="@+id/brandView"
                android:layout_width="184dp"
                android:layout_height="22dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="79dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#79828A"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="@+id/data_frame"
                app:layout_constraintTop_toTopOf="@+id/data_frame" />


            <ImageButton
                android:id="@+id/go_webBrowser"
                android:layout_width="335dp"
                android:layout_height="60dp"
                android:layout_marginBottom="34dp"
                android:src="@drawable/ic_product_detail_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="@string/txt_scan_success_button"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/go_webBrowser"
                app:layout_constraintLeft_toLeftOf="@+id/go_webBrowser"
                app:layout_constraintRight_toRightOf="@+id/go_webBrowser"
                app:layout_constraintTop_toTopOf="@+id/go_webBrowser" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>

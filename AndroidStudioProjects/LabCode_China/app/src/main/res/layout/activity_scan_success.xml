<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="812"
    android:orientation="vertical"
    tools:context=".navigation.scan.page.ScanSuccessActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="86">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_cancel_button"
                    android:background="@android:color/transparent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="435">

        <ImageView
            android:id="@+id/parent_image"
            android:layout_width="335dp"
            android:layout_height="396dp"
            android:src="@drawable/ic_success_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
             />

        <TextView
            android:id="@+id/scan_success"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="@string/txt_scan_success_main"
            android:textColor="#111111"
            android:textSize="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="70dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/txt_scan_success_sub"
            android:textColor="#9EA7AD"
            app:layout_constraintTop_toBottomOf="@+id/scan_success"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="12dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="291">

        <ImageView
            android:id="@+id/data_frame"
            android:layout_width="335dp"
            android:layout_height="128dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="34dp"
            android:src="@drawable/ic_data_frame" />

        <androidx.cardview.widget.CardView
            android:id="@+id/product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="@+id/data_frame"
            app:layout_constraintBottom_toBottomOf="@+id/data_frame"
            app:layout_constraintLeft_toLeftOf="@+id/data_frame"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/genreView"
            android:layout_width="184dp"
            android:layout_height="22dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="#79828A"
            app:layout_constraintTop_toTopOf="@+id/data_frame"
            android:layout_marginTop="27dp"
            app:layout_constraintLeft_toLeftOf="@+id/data_frame"
            android:layout_marginLeft="120dp" />

        <TextView
            android:id="@+id/productView"
            android:layout_width="195dp"
            android:layout_height="24dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#303538"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/data_frame"
            android:layout_marginTop="51dp"
            app:layout_constraintLeft_toLeftOf="@+id/data_frame"
            android:layout_marginLeft="120dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/brandView"
            android:layout_width="184dp"
            android:layout_height="22dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="#79828A"
            app:layout_constraintTop_toTopOf="@+id/data_frame"
            android:layout_marginTop="79dp"
            app:layout_constraintLeft_toLeftOf="@+id/data_frame"
            android:layout_marginLeft="120dp" />


        <ImageButton
            android:id="@+id/go_webBrowser"
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_product_detail" />

        </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>